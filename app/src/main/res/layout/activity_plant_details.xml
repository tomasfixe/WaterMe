<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".PlantDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="32dp">

        <ImageView
            android:id="@+id/ivDetailPhoto"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_gallery"
            android:background="#EEEEEE"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/tvDetailName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome da Planta"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/tvDetailDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Descrição..."
                android:textSize="16sp"
                android:textColor="#424242"
                android:lineSpacingMultiplier="1.2"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="32dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Frequência Rega"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray"/>

                    <TextView
                        android:id="@+id/tvDetailFreq"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-- dias"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Luminosidade"
                        android:textSize="12sp"
                        android:textColor="@android:color/darker_gray"/>

                    <TextView
                        android:id="@+id/tvDetailLight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-- lx"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"/>
                </LinearLayout>
            </GridLayout>

            <Button
                android:id="@+id/btnWaterNow"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="32dp"
                android:text="REGUEI HOJE"
                android:textSize="18sp"
                android:textStyle="bold"
                android:backgroundTint="#2196F3"
                app:cornerRadius="30dp"
                app:icon="@android:drawable/ic_menu_today"
                app:iconGravity="textStart" />

            <Button
                android:id="@+id/btnEditPlant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:backgroundTint="#FFA000"
                android:text="Editar Planta"
                android:textColor="@android:color/white"
                app:icon="@android:drawable/ic_menu_edit" />

            <Button
                android:id="@+id/btnDeletePlant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:backgroundTint="#D32F2F"
                android:text="Apagar Planta"
                android:textColor="@android:color/white"
                app:icon="@android:drawable/ic_menu_delete" />

        </LinearLayout>
    </LinearLayout>
</ScrollView>